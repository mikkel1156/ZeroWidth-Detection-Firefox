{
    "manifest_version": 2,
    "name": "ZeroWidth Detection",
    "version": "1.0",

    "description": "Checks websites that you visit for invisible zero-width characters and replaces them with an emoji while alerting you about it.",

    "icons": {
        "48": "icon.png"
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup/popup.html",
        "default_title": "Zero-width character Detection"
    },

    "options_ui": {
        "page": "options/options.html"
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["zerowidth-detect.js"]
    }],

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "clipboardWrite"
    ]

}